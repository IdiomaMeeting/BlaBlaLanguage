<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_preferences"
    tools:context=".Activitys.PreferencesActivity"
    android:baselineAligned="false"
    android:clickable="false"
    android:dividerPadding="@dimen/abc_action_bar_icon_vertical_padding_material"
    android:divider="@android:color/background_dark"
    android:paddingTop="@dimen/abc_action_bar_content_inset_material"
    android:paddingEnd="@dimen/abc_action_bar_content_inset_material"
    android:showDividers="middle|end"
    style="@style/AlertDialog.AppCompat"
    android:padding="@dimen/abc_action_bar_content_inset_material">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkBox_notifications"
        android:id="@+id/cb_notifications"
        android:layout_gravity="center_horizontal" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_new_meeting"
        android:id="@+id/sw_new_meeting"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:enabled="false"
        />
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_new_user_in_my_meeting"
        android:id="@+id/sw_new_user"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:enabled="false"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifcation_time_before_meeting"
        android:id="@+id/sw_meeting_time"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:enabled="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_languages"
        android:id="@+id/btn_select_idioms"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
