<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_preferences"
    tools:context=".Activitys.PreferencesActivity"
    android:baselineAligned="false"
    android:clickable="false"
    android:dividerPadding="@dimen/abc_action_bar_icon_vertical_padding_material"
    android:divider="@android:color/background_dark"
    android:paddingTop="@dimen/abc_action_bar_content_inset_material"
    android:paddingEnd="@dimen/abc_action_bar_content_inset_material"
    android:showDividers="middle|end"
    style="@style/AlertDialog.AppCompat"
    android:padding="@dimen/abc_action_bar_content_inset_material">
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones nuevo meeting"
        android:id="@+id/sw_new_meeting"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:singleLine="false" />
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificacions nuevo meeting en meeting apuntad"
        android:id="@+id/sw_new_user"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_action_bar_content_inset_material" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificacion 30 minutos antes un meeting apuntado"
        android:id="@+id/sw_meeting_time"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/abc_action_bar_content_inset_material" />



</LinearLayout>
