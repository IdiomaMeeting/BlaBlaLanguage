<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user_profile_activiy" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jordi.blablalanguage.UserProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:text="Jordi"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Languages: "
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:padding="@dimen/abc_action_bar_content_inset_material"/>

       <RadioButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/radio_english"
           android:padding="@dimen/abc_action_bar_content_inset_material"
           android:text="English"/>
       <RadioButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/radio_spanish"
           android:padding="@dimen/abc_action_bar_content_inset_material"
           android:text="Spanish"/>
       <RadioButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/radio_portugues"
           android:padding="@dimen/abc_action_bar_content_inset_material"
           android:text="Portguese"/>
       <RadioButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/radio_xines"
           android:padding="@dimen/abc_action_bar_content_inset_material"
           android:text="Chenese"/>
       <RadioButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/radio_catalan"
           android:padding="@dimen/abc_action_bar_content_inset_material"
           android:text="Catalan"/>


    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
